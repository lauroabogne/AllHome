<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Syncing data"
        android:textStyle="bold"
        android:textSize="16sp" />

    <!-- Overall progress bar -->
    <ProgressBar
        android:id="@+id/progress_bar_overall"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0" />

    <TextView
        android:id="@+id/overall_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall progress: 0/2" />

    <!-- Detailed progress bar -->
    <ProgressBar
        android:id="@+id/progress_bar_detailed"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0" />

    <TextView
        android:id="@+id/detailed_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detailed progress: 0/20" />
</LinearLayout>
