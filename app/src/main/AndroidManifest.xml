<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AllHomeBaseApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AllHome">
        <activity
            android:name=".todo.TodoFragmentContainerActivity"
            android:exported="false"
            android:theme="@style/Theme.AllHome.NoActionBar" />
        <activity
            android:name=".grocerylist.BrowserItemImageActivity"
            android:exported="false"
            android:theme="@style/Theme.AllHome.NoActionBar" />
        <activity
            android:name=".recipes.WebBrowseRecipeActivity"
            android:theme="@style/Theme.AllHome.NoActionBar" />
        <activity android:name=".expenses.ExpensesItemSummaryActivity" />
        <activity
            android:name=".bill.BillActivity"
            android:theme="@style/Theme.AllHome.NoActionBar" />
        <activity
            android:name=".meal_planner.ViewerActivity"
            android:theme="@style/Theme.AllHome.NoActionBar" />
        <activity
            android:name=".meal_planner.ViewMealOfTheDayActivity"
            android:theme="@style/Theme.AllHome.NoActionBar" />
        <activity
            android:name=".recipes.ViewRecipeActivity"
            android:theme="@style/Theme.AllHome.NoActionBar" />
        <activity android:name=".recipes.AddRecipeActivity" />
        <activity android:name=".storage.StorageStorageListActivity" />
        <activity android:name=".storage.StorageGroceryListActivity" />
        <activity android:name=".storage.CreateStorageActivity" />
        <activity android:name=".recipes.RecipeGroceryListActivity" />
        <activity
            android:name=".storage.StorageActivity"
            android:theme="@style/Theme.AllHome.NoActionBar" />
        <activity android:name=".storage.StorageAddItemActivity" />
        <activity android:name=".grocerylist.trash_grocery_list.TrashSingleGroceryListActivity" />

        <receiver
            android:name=".GroceryListNotificationReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".grocerylist.GroceryListInformationActivity" />
        <activity
            android:name=".grocerylist.SingleGroceryListActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".grocerylist.CreateGroceryListActivity"
            android:label="@string/title_activity_create_grocery_list"
            android:theme="@style/Theme.AllHome.NoActionBar" />
        <activity
            android:name=".grocerylist.AddGroceryListItemActivity"
            android:theme="@style/Theme.AllHome.NoActionBar" />
        <activity
            android:name=".grocerylist.GroceryListActivity"
            android:label="@string/title_activity_grocery_list_activity"
            android:theme="@style/Theme.AllHome.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/Theme.AllHome.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.allhome.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>